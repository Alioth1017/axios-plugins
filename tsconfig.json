{
    "compilerOptions": {
        "strict": false,
        "target": "ES6",
        "module": "NodeNext",
        "types": [
            "node",
            "jest"
        ],
        "lib": [
            "ESNext",
            "dom"
        ],
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "dist/typings",
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true
    },
    "include": [
        "src/**/*.ts"
    ]
}